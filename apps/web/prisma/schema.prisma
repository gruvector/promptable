generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Example {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Chain {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    scopeId   String
    trace     String
}

model Trace {
    id    String @id @default(cuid())
    trace String
}

